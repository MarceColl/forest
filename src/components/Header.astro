---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<a href="https://webring.xxiivv.com/#dziban" id="webring" target="_blank" rel="noopener">
            <img src="https://webring.xxiivv.com/icon.white.svg" width="22" height="22" alt="XXIIVV webring"/>
        </a>
	</nav>
</header>
<style>
	header {
	   background-color: var(--primary);
	   color: var(--content);
	   margin: 1em;
	   padding: 1em;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	#webring {
	   &::after { content: ""; }
	   &::before { content: ""; }
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
